LINK - https://leetcode.com/problems/rings-and-rods/


class Solution {
public:
    int countPoints(string rings) {
        unordered_map<int,set<char>> mp;
        int n=rings.size();
        for(int i=0;i<n-1;i++)
        {
            if(rings[i]=='R' || rings[i]=='B' || rings[i]=='G')
            {
                mp[rings[i+1]-'0'].insert(rings[i]);
            }
        }
        int count =0;
        for(auto x: mp)
        {
            if(x.second.size()>=3)
                count++;
        }
        return count;
    }
};
