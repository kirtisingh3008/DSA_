LINK - https://leetcode.com/problems/matrix-diagonal-sum/

class Solution {
public:
    int diagonalSum(vector<vector<int>>& mat) {
      int sum =0;
        int n = mat.size();
        for(int i=0;i<mat.size();i++)
        {
            for(int j=0;j<mat[0].size();j++)
            {
                if(i==j)
                {
                    cout<<mat[i][j]<<" ";
                    sum+=mat[i][j];
                }
               
                if(i+j==mat.size()-1)
                {
                   // cout<<mat[i][j]<<" ";
                    sum+=mat[i][j];
                }
               
                }
            }
        if(n%2==1)
        sum -= mat[mat.size()/2][mat.size()/2];
        return sum;
    }
};

TC - O(N*N)
SC - 0(1)
